---
// Page is prerendered by default (output: 'static')
// Only the ContactForm island is server-rendered using server:defer
import Layout from '../layouts/Layout.astro';
import Hero from '../components/astro/Hero.astro';
import Services from '../components/astro/Services.astro';
import ValueSection from '../components/astro/ValueSection.astro';
import Vehicles from '../components/astro/Vehicles.astro';
import ZoneIntervention from '../components/astro/ZoneIntervention.astro';
import Footer from '../components/astro/Footer.astro';
import Header from '../components/astro/Header.astro';
import ContactFormIsland from '../components/astro/ContactFormIsland.astro';
---

<Layout>
  <Header />
  <main>
    <Hero />
    <Services />
    <ValueSection />
    <Vehicles />
    <ZoneIntervention />
    <ContactFormIsland server:defer>
      <!-- Fallback content while the form loads -->
      <div slot="fallback" class="py-24 bg-dark" id="contact">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-16">
            <!-- Left: Contact Info -->
            <div>
              <span class="inline-block px-4 py-2 bg-white/5 border border-white/10 rounded-full text-sm text-gray-400 mb-4">
                Contact
              </span>
              <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Besoin d'un Épaviste ?</h2>
              <p class="text-gray-500 mb-8">
                Contactez-nous maintenant. Disponible 24h/24, 7j/7.
              </p>
            </div>
            <!-- Right: Form Placeholder -->
            <div class="bg-charcoal border border-white/10 rounded-2xl p-8 md:p-12">
              <div class="text-center mb-8">
                <span class="inline-block px-4 py-2 bg-accent/10 border border-accent/20 rounded-full text-sm text-accent mb-4">
                  Contact
                </span>
                <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Contactez-nous</h2>
                <p class="text-gray-400">
                  Chargement du formulaire...
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </ContactFormIsland>
  </main>
  <Footer />
  
  <!-- FLOATING BUTTONS (Mobile) -->
  <div class="fixed bottom-4 right-4 z-50 flex flex-col gap-3 md:hidden">
    <a
      href="https://wa.me/33766463392?text=Bonjour,%20j'ai%20besoin%20de%20vos%20services%20d'épaviste"
      target="_blank"
      rel="noopener"
      class="w-14 h-14 bg-green-500 rounded-full flex items-center justify-center shadow-lg"
      aria-label="Contacter sur WhatsApp"
    >
      <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
        />
      </svg>
    </a>
  </div>



  <!-- Add padding for mobile sticky button -->
  <div class="h-20 md:hidden"></div>

  <!-- JavaScript for Animations -->
  <script>
    // Fade-in animation on scroll
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('fade-in-visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('section > div').forEach((el) => {
      el.classList.add('fade-in');
      observer.observe(el);
    });
  </script>
</Layout>

