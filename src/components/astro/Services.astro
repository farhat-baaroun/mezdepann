---
import { Image } from 'astro:assets';
import serviceEpaviste from '../../assets/images/service-epaviste.jpg';
import serviceRachat from '../../assets/images/service-rachat.jpg';
import serviceCarteGrise from '../../assets/images/service-carte-grise.jpg';
import serviceHs from '../../assets/images/service-hs.jpg';
import serviceAccidente from '../../assets/images/service-accidente.jpg';
import service2roues from '../../assets/images/service-2roues.jpg';

const services = [
  {
    image: serviceEpaviste,
    title: 'Épaviste Agréé',
    description: "Enlèvement gratuit de votre épave par un centre VHU agréé. Certificat de destruction fourni.",
    badge: '100% gratuit',
    alt: 'Dépanneuse épaviste à Paris',
  },
  {
    image: serviceRachat,
    title: 'Rachat de Véhicules',
    description: 'Vendez votre véhicule rapidement. Paiement immédiat et sécurisé sur place.',
    badge: "Jusqu'à 200€",
    alt: 'Rachat de véhicule',
  },
  {
    image: serviceCarteGrise,
    title: 'Problème Carte Grise',
    description: 'Papiers incomplets ou manquants ? Nous gérons toutes les démarches administratives.',
    badge: 'Sans frais cachés',
    alt: 'Carte grise française',
  },
  {
    image: serviceHs,
    title: 'Véhicules Hors Service',
    description: 'Moteur cassé, boîte morte, panne électrique ? On s\'occupe de tout.',
    badge: 'Toutes pannes',
    alt: 'Voiture hors service à Paris',
  },
  {
    image: serviceAccidente,
    title: 'Véhicules Accidentés',
    description: 'Choc avant, arrière, latéral ? Nous rachetons votre véhicule accidenté.',
    badge: 'Évaluation gratuite',
    alt: 'Voiture accidentée à Paris',
  },
  {
    image: service2roues,
    title: '2 Roues & Autres',
    description: 'Scooters, motos, quads, utilitaires... Tous véhicules acceptés.',
    badge: 'Tous types',
    alt: 'Moto et scooter à Paris',
  },
];
---

<section class="py-24 bg-charcoal" id="services">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span
        class="inline-block px-4 py-2 bg-white/5 border border-white/10 rounded-full text-sm text-gray-400 mb-4"
      >
        Nos Services
      </span>
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Solutions pour Votre Véhicule</h2>
      <p class="text-gray-500 max-w-2xl mx-auto">
        Des services professionnels et agréés pour tous types de véhicules, en toute légalité.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service) => (
        <div class="card-hover group bg-dark border border-white/5 rounded-xl overflow-hidden">
          <div class="aspect-[4/3] overflow-hidden">
            <Image
              src={service.image}
              alt={service.alt}
              width={800}
              height={600}
              format="webp"
              quality={70}
              loading="lazy"
              decoding="async"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">{service.title}</h3>
            <p class="text-gray-400 text-sm mb-4">{service.description}</p>
            <div class="flex items-center gap-2 text-accent text-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                />
              </svg>
              {service.badge}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

