---
import { SITE } from '../../config/site';

const departments = [
  'Paris (75)',
  'Hauts-de-Seine (92)',
  'Seine-Saint-Denis (93)',
  'Val-de-Marne (94)',
  'Yvelines (78)',
  'Essonne (91)',
  'Seine-et-Marne (77)',
  "Val-d'Oise (95)",
];
---

<section class="py-24 bg-dark" id="contact">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Left: Contact Info -->
      <div>
        <span
          class="inline-block px-4 py-2 bg-white/5 border border-white/10 rounded-full text-sm text-gray-400 mb-4"
        >
          Contact
        </span>
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Besoin d'un Épaviste ?</h2>
        <p class="text-gray-500 mb-8">
          Contactez-nous maintenant pour un devis gratuit. Disponible 24h/24, 7j/7.
        </p>

        <div class="space-y-4">
          <!-- Phone -->
          <a
            href={`tel:${SITE.phone}`}
            class="flex items-center gap-4 p-4 bg-charcoal border border-white/5 rounded-xl hover:border-accent/30 transition-colors"
          >
            <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                />
              </svg>
            </div>
            <div>
              <p class="text-gray-500 text-sm">Téléphone</p>
              <p class="text-white text-lg font-semibold">{SITE.phoneDisplay}</p>
            </div>
          </a>

          <!-- WhatsApp -->
          <a
            href={`https://wa.me/${SITE.phone.replace('+', '')}?text=Bonjour,%20j'ai%20besoin%20de%20vos%20services%20d'épaviste`}
            target="_blank"
            rel="noopener"
            class="flex items-center gap-4 p-4 bg-charcoal border border-white/5 rounded-xl hover:border-green-500/30 transition-colors"
          >
            <div class="w-12 h-12 bg-green-500/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                />
              </svg>
            </div>
            <div>
              <p class="text-gray-500 text-sm">WhatsApp</p>
              <p class="text-white text-lg font-semibold">{SITE.phoneDisplay}</p>
            </div>
          </a>

          <!-- Snapchat -->
          <a
            href={`https://snapchat.com/add/${SITE.snapchat}`}
            target="_blank"
            rel="noopener"
            class="flex items-center gap-4 p-4 bg-charcoal border border-white/5 rounded-xl hover:border-yellow-400/30 transition-colors"
          >
            <div class="w-12 h-12 bg-yellow-400/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12.206.793c.99 0 4.347.276 5.93 3.821.529 1.193.403 3.219.299 4.847l-.003.06c-.012.18-.022.345-.03.51.075.045.203.09.401.09.3-.016.659-.12 1.033-.301a.42.42 0 01.17-.029c.107 0 .2.027.287.077.15.089.253.237.276.411.024.178-.03.359-.147.508-.388.492-.995.826-1.766.974l-.014.002-.202.041c-.116.025-.197.127-.18.243.023.158.046.314.046.477 0 1.234-.255 2.65-1.003 3.74-.77 1.12-1.96 1.874-3.43 2.136l-.016.003-.213.033c-.115.017-.195.12-.178.235.11.724.048 1.384-.19 1.96-.302.72-.88 1.29-1.556 1.71-.797.499-1.743.787-2.673.787-.93 0-1.876-.288-2.673-.787-.676-.42-1.254-.99-1.556-1.71-.238-.576-.3-1.236-.19-1.96.017-.115-.063-.218-.178-.235l-.213-.033-.016-.003c-1.47-.262-2.66-1.016-3.43-2.136-.748-1.09-1.003-2.506-1.003-3.74 0-.163.023-.319.046-.477.017-.116-.064-.218-.18-.243l-.202-.041-.014-.002c-.771-.148-1.378-.482-1.766-.974-.117-.149-.171-.33-.147-.508.023-.174.126-.322.276-.411.087-.05.18-.077.287-.077.058 0 .114.01.17.029.374.181.733.285 1.033.301.198 0 .326-.045.401-.09-.008-.165-.018-.33-.03-.51l-.003-.06c-.104-1.628-.23-3.654.299-4.847C6.451 1.069 9.808.793 10.798.793h.408z"
                />
              </svg>
            </div>
            <div>
              <p class="text-gray-500 text-sm">Snapchat</p>
              <p class="text-white text-lg font-semibold">{SITE.snapchat}</p>
            </div>
          </a>

          <!-- Email -->
          <a
            href={`mailto:${SITE.email}`}
            class="flex items-center gap-4 p-4 bg-charcoal border border-white/5 rounded-xl hover:border-accent/30 transition-colors"
          >
            <div class="w-12 h-12 bg-white/5 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
            </div>
            <div>
              <p class="text-gray-500 text-sm">Email</p>
              <p class="text-white text-lg font-semibold">{SITE.email}</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Right: Coverage Area -->
      <div class="bg-charcoal border border-white/5 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-white mb-6">Zone d'Intervention</h3>
        <p class="text-gray-500 mb-6">
          Nous intervenons dans toute l'Île-de-France avec 15 dépanneurs disponibles 24h/24.
        </p>

        <div class="grid grid-cols-2 gap-3 mb-6">
          {departments.map((dept) => (
            <div class="flex items-center gap-2 text-gray-300">
              <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                />
              </svg>
              {dept}
            </div>
          ))}
        </div>

        <div class="p-4 bg-accent/10 border border-accent/20 rounded-lg">
          <p class="text-accent text-sm font-medium mb-1">Intervention rapide</p>
          <p class="text-gray-400 text-sm">Délai moyen : 30-60 minutes selon votre localisation</p>
        </div>
      </div>
    </div>
  </div>
</section>

